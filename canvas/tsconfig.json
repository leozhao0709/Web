{
  "extends": "./tsconfig.basic.json",
  "compilerOptions": {
    "module": "commonjs",
    "allowJs": true,
    "baseUrl": ".",
    "paths": {
      "app/*": ["src/*"],
      "tests/*": ["tests/*"]
    },
    "plugins": [
      {
        "transform": "typescript-transform-paths",
        "afterDeclarations": true
      }
    ]
  },
  "exclude": ["node_modules"],
  "include": ["src", "tests"]
}
